root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 3
trim_trailing_whitespace = true

[*.{js, txt, md, css, html, php, py, json, sass,pug}]
indent_style = tab
indent_size = 3

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
